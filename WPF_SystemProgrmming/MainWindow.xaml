<Window x:Class="WPF_SystemProgrmming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SystemProgrmming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="txtInput" HorizontalAlignment="Left" Height="91" TextWrapping="Wrap"  VerticalAlignment="Top" Width="400" Margin="0,29,0,0"/>
        <Button Content="StartSearch" FontSize="20" FontFamily="Oswald" Foreground="BlueViolet" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="0,120,0,0" Height="52" Click="Start_Click"/>
        <TextBox HorizontalAlignment="Left" Height="29" IsReadOnly="True" TextWrapping="Wrap" Text="Please, input words below, with comma separator.  
                 Or load a file with words." VerticalAlignment="Top" Width="782"
                 FontSize="20" FontFamily="Oswald"  TextAlignment="Right"
                 Foreground="#FF5885A4"/>

    </Grid>
</Window>
